while True:
    name = input("Введите название заметки: \n")
    if name == "выйти":
        break
    content = input("Введите содержимое заметки: \n")
    time = datetime.datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    main_file = open("Дневник записок.txt","a", encoding="utf-8")
    main_file.write(f"{time}\n")
    main_file.write(str(name) + " - Название заметки")
    main_file.close()

    file = open(str(name) + ".txt", "w",  encoding="utf-8")
    file.write("Ваша заметка: \n\n" + str(content))
    file.close()
