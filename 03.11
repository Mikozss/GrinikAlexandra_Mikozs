# clock
from tkinter import *
import time

def update_time():
    current_time = time.strftime("%H:%M:%S")
    time_label.config(text = current_time)
    time_label.after(1000, update_time)

root= Tk()
root.title = ("Time")


time_label = Label(
    root,
    font = ("Arial", 100),
    bg = "#5c4633",
    fg = "#d4bca9",
)
time_label.pack(padx=5, pady=5)

update_time()
root.mainloop()
